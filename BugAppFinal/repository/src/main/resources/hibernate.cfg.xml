<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!--<property name="dialect">org.hibernate.dialect.SQLiteDialect</property>-->
        <!--<property name="dialect">repository.dialect.identity.SQLiteDialect</property>-->
        <property name="dialect">repository.dialect.identity.SQLiteDialect</property>
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:D:/An2Sem2/ISS/BugApplication/identifier.sqlite</property>

        <!--<property name="hibernate.hbm2ddl.auto">update</property>-->

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>


        <mapping resource="Bug.hbm.xml"/>
        <mapping resource="Tester.hbm.xml"/>
        <mapping resource="Programmer.hbm.xml"/>

    </session-factory>
</hibernate-configuration>